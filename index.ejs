        transform: translateY(-1px);
      }

      #background-controls-widget button:active {
        background: #333;
        transform: translateY(0);
      }

      #background-controls-widget label {
        display: flex;
        align-items: center;
        gap: 6px;
        background: rgba(255, 255, 255, 0.05);
        padding: 4px 6px;
        border-radius: 6px;
      }

      #background-controls-widget input[type="color"] {
        width: 36px;
        height: 22px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        background: transparent;
      }

      #background-controls-widget input[type="range"] {
        width: 90px;
        cursor: pointer;
      }

      #background-controls-widget input[type="number"] {
        width: 52px;
        padding: 3px;
        border: 1px solid #666;
        border-radius: 4px;
        background: #2a2a2a;
        color: white;
        text-align: center;
