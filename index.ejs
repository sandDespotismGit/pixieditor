    <style>
      :root {
        --bg-primary: #0a0e17;
        --bg-secondary: rgba(21, 27, 41, 0.7);
        --accent: #00d4ff;
        --accent-secondary: #7b61ff;
        --text-primary: #ffffff;
        --text-secondary: #8c9db5;
        --border: rgba(42, 51, 69, 0.6);
        --success: #00ff9d;
        --danger: #ff4d7c;
      }

      body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
        font-family: "Rubik", sans-serif;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }

      /* Стили для контейнеров управления - ПРОЗРАЧНЫЕ */
      #background-controls,
      #widget-controls {
        background: rgba(21, 27, 41, 0.6);
        border: 1px solid var(--border);
        border-radius: 12px;
        backdrop-filter: blur(15px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        padding: 15px;
        color: var(--text-primary);
        font-family: "Rubik", sans-serif;
        z-index: 10;
        max-width: 300px;
      }

      #background-controls {
        position: absolute;
        top: 15px;
        right: 15px;
        width: 350px;
        overflow-y: scroll;
        max-height: 80vh;
      }
      #background-controls-widget {
        position: absolute;
        bottom: 15px;
        left: 10vw;
      }

      #widget-controls {
        position: absolute;
        top: 15px;
        left: 15px;
        max-height: 90vh;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: var(--accent) transparent;
      }

      #widget-controls::-webkit-scrollbar {
        width: 6px;
      }

      #widget-controls::-webkit-scrollbar-track {
        background: transparent;
      }

      #widget-controls::-webkit-scrollbar-thumb {
        background: var(--accent);
        border-radius: 3px;
      }

      /* Заголовки секций */
      #widget-controls > div > p {
        font-size: 14px;
        font-weight: 600;
        margin: 15px 0 10px 0;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 1px solid var(--border);
        padding-bottom: 5px;
      }

      /* Кнопки - полупрозрачные */
      button {
        background: rgba(10, 14, 23, 0.7);
        border: 1px solid var(--border);
        color: var(--text-primary);
        padding: 8px 12px;
        margin: 4px;
        border-radius: 6px;
        cursor: pointer;
        font-family: "Rubik", sans-serif;
        font-size: 12px;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px);
      }

      button:hover {
        background: rgba(10, 14, 23, 0.9);
        border-color: var(--accent);
        box-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
        transform: translateY(-2px);
      }

      button:active {
        transform: translateY(0);
        box-shadow: 0 0 8px rgba(0, 212, 255, 0.3);
      }

      /* Группы кнопок */
      #widget-controls > div > div {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
      }

      /* Поля ввода - прозрачные */
      input[type="color"],
      input[type="range"],
      input[type="number"] {
        background: rgba(10, 14, 23, 0.6);
        border: 1px solid var(--border);
        border-radius: 6px;
        padding: 5px;
        color: var(--text-primary);
        font-family: "Rubik", sans-serif;
        margin-bottom: 8px;
        backdrop-filter: blur(5px);
      }

      input[type="range"] {
        width: 100%;
        background: transparent;
      }

      input[type="number"] {
        width: 80px;
      }

      input[type="color"]:hover,
      input[type="range"]:hover,
      input[type="number"]:hover {
        border-color: var(--accent);
      }

      /* Метки */
      label {
        display: block;
        margin-bottom: 10px;
        font-size: 12px;
        color: var(--text-secondary);
      }

      /* Выбранный виджет - прозрачный */
      #choosed-widget {
        background: rgba(10, 14, 23, 0.6);
        border: 1px solid var(--accent);
        border-radius: 6px;
        padding: 10px;
        margin: 0 0 15px 0;
        text-align: center;
        font-size: 14px;
        color: var(--accent);
        box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
        backdrop-filter: blur(5px);
      }

      /* Специфические стили для background-controls */
      #background-controls label {
        color: var(--text-secondary);
      }

      #background-controls input[type="range"] {
        margin-top: 5px;
      }

      .widgetContainer {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
      .widgetRow {
        width: 100%;
        display: flex;
        gap: 10px;
      }
      .widgetRow img {
        background: rgba(10, 14, 23, 0.7);
        object-fit: contain;
        width: 120px;
        padding: 5px;
        border: 1px solid var(--border);
        border-radius: 10px;
        cursor: pointer;
      }

      .widgetRow img:hover {
        background: rgba(10, 14, 23, 0.9);
        border-color: var(--accent);
        box-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
        transform: translateY(-2px);
        transition: 0.3s;
      }

      /* Адаптивность */
      @media (max-width: 1200px) {
        #widget-controls {
          width: 280px;
        }

        #background-controls {
          width: 180px;
        }
      }

      @media (max-width: 900px) {
        #widget-controls {
          width: 250px;
          font-size: 12px;
        }

        button {
          padding: 6px 10px;
          font-size: 11px;
        }

        #background-controls {
          width: 160px;
          padding: 10px;
        }
      }
    </style>
  </head>

