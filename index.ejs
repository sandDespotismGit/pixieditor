    <script>
      // Синхронизация ползунков и текстовых полей
      document.addEventListener("DOMContentLoaded", function () {
        // Прозрачность
        const alphaSlider = document.getElementById("background-alpha");
        const alphaInput = document.getElementById("background-alpha-input");

        alphaSlider.addEventListener("input", function () {
          alphaInput.value = this.value;
        });

        alphaInput.addEventListener("input", function () {
          let value = parseFloat(this.value);
          if (isNaN(value)) value = 1;
          value = Math.max(0, Math.min(1, value));
          this.value = value.toFixed(2);
          alphaSlider.value = value;
        });

        // Закругление
        const radiusSlider = document.getElementById("corner-radius");
        const radiusInput = document.getElementById("corner-radius-input");

        radiusSlider.addEventListener("input", function () {
          radiusInput.value = this.value;
        });

        radiusInput.addEventListener("input", function () {
          let value = parseInt(this.value);
          if (isNaN(value)) value = 32;
          value = Math.max(0, Math.min(100, value));
          this.value = value;
          radiusSlider.value = value;
        });

        // Обработчики для кнопок
        document
          .getElementById("delete-all")
          .addEventListener("click", function () {
            // Логика удаления всех объектов
            console.log("Удалить все");
          });

        document
          .getElementById("delete-selected")
          .addEventListener("click", function () {
            // Логика удаления выбранных объектов
            console.log("Удалить выбранное");
          });

        document
          .getElementById("select-all")
          .addEventListener("click", function () {
            // Логика выбора всех объектов
            console.log("Выбрать все");
          });

        // Обработчик для цвета фона
        document
          .getElementById("background-color")
          .addEventListener("input", function () {
            console.log("Цвет фона изменен на:", this.value);
          });
      });
    </script>

