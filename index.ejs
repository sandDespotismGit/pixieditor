<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>PixiJS - Hi-Tech Dashboard</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --bg-primary: #0a0e17;
        --bg-secondary: rgba(21, 27, 41, 0.7);
        --accent: #00d4ff;
        --accent-secondary: #7b61ff;
        --text-primary: #ffffff;
        --text-secondary: #8c9db5;
        --border: rgba(42, 51, 69, 0.6);
        --success: #00ff9d;
        --danger: #ff4d7c;
      }

      body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
        font-family: "Rubik", sans-serif;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }

      /* Стили для контейнеров управления - ПРОЗРАЧНЫЕ */
      #background-controls,
      #widget-controls {
        background: rgba(21, 27, 41, 0.6);
        border: 1px solid var(--border);
        border-radius: 12px;
        backdrop-filter: blur(15px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        padding: 15px;
        color: var(--text-primary);
        font-family: "Rubik", sans-serif;
        z-index: 10;
      }

      #background-controls {
        position: absolute;
        top: 15px;
        right: 15px;
        width: 200px;
        overflow-y: scroll;
        max-height: 80vh;
      }
      #background-controls-widget {
        position: absolute;
        bottom: 15px;
        right: 30vw;
        width: 200px;
      }

      #widget-controls {
        position: absolute;
        top: 15px;
        left: 15px;
        max-height: 90vh;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: var(--accent) transparent;
      }

      #widget-controls::-webkit-scrollbar {
        width: 6px;
      }

      #widget-controls::-webkit-scrollbar-track {
        background: transparent;
      }

      #widget-controls::-webkit-scrollbar-thumb {
        background: var(--accent);
        border-radius: 3px;
      }

      /* Заголовки секций */
      #widget-controls > div > p {
        font-size: 14px;
        font-weight: 600;
        margin: 15px 0 10px 0;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 1px solid var(--border);
        padding-bottom: 5px;
      }

      /* Кнопки - полупрозрачные */
      button {
        background: rgba(10, 14, 23, 0.7);
        border: 1px solid var(--border);
        color: var(--text-primary);
        padding: 8px 12px;
        margin: 4px;
        border-radius: 6px;
        cursor: pointer;
        font-family: "Rubik", sans-serif;
        font-size: 12px;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px);
      }

      button:hover {
        background: rgba(10, 14, 23, 0.9);
        border-color: var(--accent);
        box-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
        transform: translateY(-2px);
      }

      button:active {
        transform: translateY(0);
        box-shadow: 0 0 8px rgba(0, 212, 255, 0.3);
      }

      /* Группы кнопок */
      #widget-controls > div > div {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
      }

      /* Поля ввода - прозрачные */
      input[type="color"],
      input[type="range"],
      input[type="number"] {
        background: rgba(10, 14, 23, 0.6);
        border: 1px solid var(--border);
        border-radius: 6px;
        padding: 5px;
        color: var(--text-primary);
        font-family: "Rubik", sans-serif;
        margin-bottom: 8px;
        backdrop-filter: blur(5px);
      }

      input[type="range"] {
        width: 100%;
        background: transparent;
      }

      input[type="number"] {
        width: 80px;
      }

      input[type="color"]:hover,
      input[type="range"]:hover,
      input[type="number"]:hover {
        border-color: var(--accent);
      }

      /* Метки */
      label {
        display: block;
        margin-bottom: 10px;
        font-size: 12px;
        color: var(--text-secondary);
      }

      /* Выбранный виджет - прозрачный */
      #choosed-widget {
        background: rgba(10, 14, 23, 0.6);
        border: 1px solid var(--accent);
        border-radius: 6px;
        padding: 10px;
        margin: 0 0 15px 0;
        text-align: center;
        font-size: 14px;
        color: var(--accent);
        box-shadow: 0 0 20px rgba(0, 212, 255, 0.3);
        backdrop-filter: blur(5px);
      }

      /* Специфические стили для background-controls */
      #background-controls label {
        color: var(--text-secondary);
      }

      #background-controls input[type="range"] {
        margin-top: 5px;
      }

      /* Адаптивность */
      @media (max-width: 1200px) {
        #widget-controls {
          width: 280px;
        }

        #background-controls {
          width: 180px;
        }
      }

      @media (max-width: 900px) {
        #widget-controls {
          width: 250px;
          font-size: 12px;
        }

        button {
          padding: 6px 10px;
          font-size: 11px;
        }

        #background-controls {
          width: 160px;
          padding: 10px;
        }
      }
    </style>
  </head>

  <body>
    <div id="background-controls">
      <label>Цвет: <input type="color" id="bg-color" value="#1e1e1e" /></label>
      <label
        >Прозрачность:
        <input
          type="range"
          id="bg-alpha"
          min="0"
          max="1"
          step="0.05"
          value="1"
        />
      </label>

      <p>Фоновые изображения</p>

      <div
        style="
          display: flex;
          overflow: scroll;
          width: 100%;
          overflow-y: hidden;
          gap: 40px;
          height: 200px;
        "
      >
        <img id="bg-1" src="/assets/1.png" alt="" style="object-fit: cover" />

        <img id="bg-2" src="/assets/2.png" alt="" style="object-fit: cover" />
      </div>

      <div style="display: flex; flex-direction: column; margin-top: 20px">
        <input
          type="url"
          id="bg-url-input"
          placeholder="Введите URL изображения"
          style="padding: 8px; margin-bottom: 10px"
        />

        <button id="load-bg-url" style="padding: 8px 12px; margin-bottom: 20px">
          Загрузить фоновое изображение
        </button>

        <div
          id="saved-backgrounds"
          style="display: flex; flex-wrap: wrap; gap: 10px"
        >
          <!-- Здесь будут отображаться сохраненные фоны -->
        </div>
      </div>

      <!-- Новый раздел для управления черновиками -->
      <div
        style="margin-top: 15px; border-top: 1px solid #ccc; padding-top: 10px"
      >
        <h3 style="margin: 5px 0">Черновики</h3>

        <div
          style="
            display: flex;
            gap: 5px;
            margin-bottom: 10px;
            flex-direction: column;
          "
        >
          <input
            type="text"
            id="draft-name"
            placeholder="Название черновика"
            style="flex: 1"
          /><br />
          <button id="save-draft">Сохранить</button>
        </div>

        <div
          style="
            display: flex;
            gap: 5px;
            margin-bottom: 10px;
            flex-direction: column;
          "
        >
          <select id="draft-select" style="flex: 1">
            <option value="">Выберите черновик</option>
          </select>
          <br />
          <button id="load-draft">Загрузить</button>
          <button id="delete-draft">Удалить</button>
        </div>
      </div>

      <div style="display: flex; gap: 5px; margin-top: 10px">
        <button id="export">Экспорт</button>
        <button id="import">Импорт</button>
      </div>
      <div style="margin-top: 10px">
        <label>Размеры экрана</label>
        <div style="display: flex; gap: 5px">
          <input type="number" placeholder="Ширина" id="width" />
          <input type="number" placeholder="Высота" id="height" />
        </div>
        <button id="resize" style="width: 100%; margin-top: 5px">
          Применить
        </button>
      </div>
    </div>
    <div
      id="background-controls-widget"
      style="
        position: absolute !important;
        bottom: 15px !important;
        left: 30vw !important;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
        height: 40px !important;
        padding: 5px 10px;
        border-radius: 8px;
      "
    >
      <!-- Управление объектами -->
      <button id="delete-all">Удалить все</button>
      <button id="delete-selected">Удалить выбранное</button>
      <button id="select-all">Выбрать все</button>

      <!-- Цвет фона -->
      <label style="display: flex; align-items: center; gap: 5px">
        Цвет фона:
        <input type="color" id="background-color" value="#1e1e1e" />
      </label>

      <!-- Прозрачность фона -->
      <label style="display: flex; align-items: center; gap: 5px">
        Прозрачность:
        <input
          type="range"
          id="background-alpha"
          min="0"
          max="1"
          step="0.01"
          value="1"
          style="width: 100px"
        />
      </label>

      <!-- Радиус закругления -->
      <label style="display: flex; align-items: center; gap: 5px">
        Закругление:
        <input
          type="range"
          id="corner-radius"
          min="0"
          max="100"
          step="1"
          value="32"
          style="width: 100px"
        />
      </label>
    </div>

    <div id="widget-controls">
      <label>
        <p id="choosed-widget">Выберите виджет</p>
      </label>

      <!-- Аналоговые часы -->
      <div>
        <p>Аналоговые часы</p>
        <div>
          <button id="analog-clock-1">1</button>
          <button id="analog-clock-2">2</button>
        </div>
        <div>
          <button id="analog-clock-3">3</button>
          <button id="analog-clock-4">4</button>
        </div>
        <div>
          <button id="analog-clock-5">5</button>
          <button id="analog-clock-6">6</button>
        </div>
        <div>
          <button id="analog-clock-7">7</button>
        </div>
      </div>

      <!-- Цифровые часы -->
      <div>
        <p>Цифровые часы</p>
        <div>
          <button id="digital-clock-1">1</button>
          <button id="digital-clock-2">2</button>
        </div>
        <div>
          <button id="digital-clock-3">3</button>
          <button id="digital-clock-4">4</button>
        </div>
      </div>

      <!-- Даты -->
      <div>
        <p>Календари</p>
        <div>
          <button id="calendar-1">1</button>
          <button id="calendar-2">2</button>
        </div>
        <div>
          <button id="calendar-3">3</button>
          <button id="calendar-5">4</button>
        </div>
        <div>
          <button id="calendar-6">5</button>
          <button id="calendar-7">6</button>
        </div>
      </div>

      <!-- Погода -->
      <div>
        <p>Погода</p>
        <div>
          <button id="weather-1">1</button>
          <button id="weather-2">2</button>
        </div>
        <div>
          <button id="weather-3">3</button>
          <button id="weather-4">4</button>
        </div>
      </div>

      <!-- Трафик -->
      <div>
        <p>Трафик</p>
        <div>
          <button id="traffic-1">1</button>
          <button id="traffic-2">2</button>
        </div>
        <div>
          <button id="traffic-3">3</button>
        </div>
      </div>

      <!-- Новости -->
      <div>
        <p>Новости</p>
        <div>
          <button id="news-1">1</button>
        </div>
      </div>

      <!-- Курсы доллара/евро -->
      <div>
        <p>Курс доллара/евро</p>
        <div>
          <button id="usdEur-1">1</button>
          <button id="usdEur-2">2</button>
        </div>
        <div>
          <button id="usdEur-3">3</button>
          <button id="usdEur-4">4</button>
        </div>
        <div>
          <button id="usdEur-5">5</button>
          <button id="usdEur-6">6</button>
        </div>
      </div>

      <!-- Драг. металлы -->
      <div>
        <p>Драгоценные металлы</p>
        <div>
          <button id="metal-1">1</button>
          <button id="metal-2">2</button>
        </div>
      </div>

      <!-- О компании -->
      <div>
        <p>О компании</p>
        <div>
          <button id="company-1">1</button>
          <button id="company-2">2</button>
        </div>
        <div>
          <button id="company-3">3</button>
        </div>
      </div>
      <div>
        <p>Видео</p>
        <div>
          <button id="video-1">1</button>
        </div>
      </div>
    </div>

    <div id="app">
      <div id="pixi-container"></div>
    </div>
  </body>
</html>
